{
	"version": "https://jsonfeed.org/version/1",
	"title": {{ .Site.Title | jsonify }},
	"icon": "{{ .Site.Author.avatar }}",
	"home_page_url": "{{ .Site.BaseURL }}",
	"feed_url": "{{ .Site.BaseURL }}feed.json",
	"items": [
		{{- $list := first 25 (where .Site.Pages "Type" "post") -}}
		{{- $len := (len $list) -}}
		{{ range $index, $value := $list }}
			{
				{{ if .Params.guid -}}
				"id": "{{ .Params.guid }}",
				{{- else -}}
				"id": "{{ .Permalink }}",
				{{- end }}
				{{ if .Title -}}
				"title": {{ .Title | jsonify }},
				{{- end -}}
				{{- $s := .Content | jsonify -}}
				{{- $s := replace $s "\\u003c" "<" -}}
				{{- $s := replace $s "\\u003e" ">" -}}
				{{- $s := replace $s "\\u0026" "&" }}
				"content_html": {{ $s }},
				"date_published": "{{ .Date.Format "2006-01-02T15:04:05-07:00" }}",
		                "date_modified": "{{ .Lastmod | time.Format  "2006-01-02T15:04:05-07:00" }}",
				"url": "{{ .Permalink }}"
				{{- with .Params.categories -}}
				,
				"tags": {{ . | jsonify }}
				{{- end }}
			}
			{{- if ne (add $index 1) $len -}},{{- end -}}
		{{ end }}
	]
}
